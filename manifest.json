{
  "manifest_version": 3,
  "name": "Activity Tracker",
  "version": "1.0",
  "description": "Tracks user activity in each tab.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img.png"
  },
  "icons": {
    "16": "img.png",
    "48": "img.png",
    "128": "img.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
